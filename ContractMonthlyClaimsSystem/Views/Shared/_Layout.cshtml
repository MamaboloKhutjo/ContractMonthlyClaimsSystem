<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Contract Monthly Claims System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

    <!-- IGNORE STYLES SECTION -->
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <i class="fas fa-file-invoice-dollar me-2"></i>
                    <strong>CMCS</strong>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Home")">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("About", "Home")">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Contact", "Home")">Contact</a>
                        </li>

                        @{
                            var userRole = Context.Session.GetString("UserRole");
                            var userName = Context.Session.GetString("UserName");
                        }

                        @if (!string.IsNullOrEmpty(userName))
                        {
                            @if (userRole?.ToLower() == "lecturer")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Dashboard", "Lecturer")">Dashboard</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("SubmitClaim", "Lecturer")">Submit Claim</a>
                                </li>
                            }
                            else if (userRole?.ToLower() == "manager" || userRole?.ToLower() == "program coordinator")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Dashboard", "Manager")">Dashboard</a>
                                </li>
                            }
                        }
                    </ul>

                    <ul class="navbar-nav">
                        @if (!string.IsNullOrEmpty(userName))
                        {
                            <li class="nav-item">
                                <span class="nav-link text-light">
                                    <i class="fas fa-user me-1"></i>
                                    @userName
                                </span>
                            </li>
                            <li class="nav-item">
                                <form method="post" asp-controller="Account" asp-action="Logout" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-light btn-sm ms-2">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Login", "Account")">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-light ms-2" href="@Url.Action("Register", "Account")">Sign Up</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @RenderBody()
    </main>

    <footer class="bg-dark text-light py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5><i class="fas fa-file-invoice-dollar me-2"></i>CMCS</h5>
                    <p>Contract Monthly Claims System - Streamlining your contract management process.</p>
                </div>
                <div class="col-md-3">
                    <h5>Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a href="@Url.Action("Index", "Home")" class="text-light">Home</a></li>
                        <li><a href="@Url.Action("About", "Home")" class="text-light">About</a></li>
                        <li><a href="@Url.Action("Contact", "Home")" class="text-light">Contact</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h5>Account</h5>
                    <ul class="list-unstyled">
                        <li><a href="@Url.Action("Login", "Account")" class="text-light">Login</a></li>
                        <li><a href="@Url.Action("Register", "Account")" class="text-light">Sign Up</a></li>
                    </ul>
                </div>
            </div>
            <hr class="bg-light">
            <div class="text-center">
                <small>&copy; 2024 Contract Monthly Claims System. All rights reserved.</small>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- IGNORE SCRIPTS SECTION -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>