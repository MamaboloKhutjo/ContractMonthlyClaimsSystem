@model List<Claim>

@{
    ViewData["Title"] = "Auto-Verify Claims";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1>
                    <i class="fas fa-robot me-2 text-primary"></i>Auto-Verify Claims
                </h1>
                <form method="post" asp-action="AutoVerifyClaims">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-play me-2"></i>Run Auto-Verification
                    </button>
                </form>
            </div>
            <p class="text-muted">Automated claim verification and approval system</p>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Claim ID</th>
                                <th>Lecturer</th>
                                <th>Contract</th>
                                <th>Hours</th>
                                <th>Rate</th>
                                <th>Amount</th>
                                <th>Submitted</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model)
                            {
                                <tr>
                                    <td><strong>@claim.ClaimId</strong></td>
                                    <td>@claim.LecturerName</td>
                                    <td>@claim.ContractName</td>
                                    <td>@claim.FormattedHours</td>
                                    <td>@claim.FormattedHourlyRate</td>
                                    <td class="fw-bold text-primary">@claim.FormattedAmount</td>
                                    <td>@claim.FormattedDate</td>
                                    <td>
                                        <a href="@Url.Action("ReviewClaim", "Manager", new { id = claim.ClaimId })"
                                           class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-search me-1"></i>Review
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                <h3 class="text-success">All Claims Processed!</h3>
                <p class="text-muted">No pending claims requiring automated verification.</p>
            </div>
        </div>
    }
</div>