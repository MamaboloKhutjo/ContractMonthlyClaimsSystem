@model ManagerDashboardViewModel

@{
    ViewData["Title"] = "Management Dashboard";
}

<div class="container-fluid">
    <!-- Welcome Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="welcome-card bg-primary text-white p-4 rounded-3">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <h1 class="h2 mb-2">Management Dashboard 🎯</h1>
                        <p class="mb-0 opacity-75">Welcome, @Model.CurrentUserName! Monitor claims and approvals</p>
                    </div>
                    <div class="col-md-4 text-md-end">
                        <div class="role-badge bg-white text-primary px-3 py-2 rounded-pill d-inline-block">
                            <i class="fas fa-user-tie me-2"></i>@Model.UserRole
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="row mb-4">
        <div class="col-xl-2 col-md-4 col-6 mb-4">
            <div class="card stat-card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <h2 class="text-primary mb-1">@Model.TotalUsers</h2>
                    <small class="text-muted">Total Users</small>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-md-4 col-6 mb-4">
            <div class="card stat-card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <h2 class="text-primary mb-1">@Model.ClaimsSummary.TotalClaims</h2>
                    <small class="text-muted">Total Claims</small>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-md-4 col-6 mb-4">
            <div class="card stat-card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <h2 class="text-warning mb-1">@Model.ClaimsSummary.PendingClaims</h2>
                    <small class="text-muted">Pending Approval</small>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-md-4 col-6 mb-4">
            <div class="card stat-card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <h2 class="text-success mb-1">@Model.ClaimsSummary.ApprovedClaims</h2>
                    <small class="text-muted">Approved</small>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-md-4 col-6 mb-4">
            <div class="card stat-card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <h2 class="text-danger mb-1">@Model.ClaimsSummary.RejectedClaims</h2>
                    <small class="text-muted">Rejected</small>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-md-4 col-6 mb-4">
            <div class="card stat-card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <h2 class="text-info mb-1">@Model.MonthlyApprovedAmount.ToString("C")</h2>
                    <small class="text-muted">Monthly Total</small>
                </div>
            </div>
        </div>
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-white border-0 py-3">
                <h5 class="card-title mb-0">
                    <i class="fas fa-bolt me-2 text-primary"></i>Quick Actions
                </h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="@Url.Action("PendingClaims", "Manager")" class="btn btn-primary btn-lg text-start">
                        <i class="fas fa-list-check me-2"></i>Review Pending Claims
                        <span class="badge bg-warning ms-2">@Model.PendingApprovalsCount</span>
                    </a>
                    <a href="@Url.Action("AllClaims", "Manager")" class="btn btn-outline-primary btn-lg text-start">
                        <i class="fas fa-file-invoice me-2"></i>View All Claims
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Pending Claims for Approval -->
        <div class="col-lg-8 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white border-0 py-3 d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-clock me-2 text-warning"></i>Pending Claims Requiring Approval
                    </h5>
                    <span class="badge bg-warning">@Model.PendingApprovalsCount pending</span>
                </div>
                <div class="card-body">
                    @if (Model.PendingApprovalClaims.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Claim ID</th>
                                        <th>Lecturer</th>
                                        <th>Contract</th>
                                        <th>Submitted</th>
                                        <th>Amount</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var claim in Model.PendingApprovalClaims)
                                    {
                                        <tr>
                                            <td><strong>@claim.ClaimId</strong></td>
                                            <td>@claim.LecturerName</td>
                                            <td>@claim.ContractName</td>
                                            <td>@claim.FormattedDate</td>
                                            <td>@claim.FormattedAmount</td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a href="@Url.Action("ReviewClaim", "Manager", new { id = claim.ClaimId })"
                                                       class="btn btn-outline-primary">
                                                        <i class="fas fa-eye me-1"></i>Review
                                                    </a>
                                                    <button class="btn btn-outline-success approve-claim"
                                                            data-claim-id="@claim.ClaimId">
                                                        <i class="fas fa-check me-1"></i>Approve
                                                    </button>
                                                    <button class="btn btn-outline-danger reject-claim"
                                                            data-claim-id="@claim.ClaimId">
                                                        <i class="fas fa-times me-1"></i>Reject
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                            <h5 class="text-muted">No pending claims</h5>
                            <p class="text-muted">All claims have been processed</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Quick Actions & User Stats -->
        <div class="col-lg-4 mb-4">
            <!-- Quick Actions -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-bolt me-2 text-primary"></i>Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("PendingClaims", "Manager")" class="btn btn-primary btn-lg text-start">
                            <i class="fas fa-list-check me-2"></i>View All Pending Claims
                        </a>
                        <a href="@Url.Action("ApprovedClaims", "Manager")" class="btn btn-outline-success btn-lg text-start">
                            <i class="fas fa-file-circle-check me-2"></i>Approved Claims
                        </a>
                        <a href="@Url.Action("Reports", "Manager")" class="btn btn-outline-info btn-lg text-start">
                            <i class="fas fa-chart-line me-2"></i>Generate Reports
                        </a>
                        <a href="@Url.Action("Users", "Manager")" class="btn btn-outline-secondary btn-lg text-start">
                            <i class="fas fa-users me-2"></i>Manage Users
                        </a>
                    </div>
                </div>
            </div>

            <!-- User Statistics -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-chart-bar me-2 text-info"></i>Top Submitters
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.UserStatistics.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var user in Model.UserStatistics.Take(5))
                            {
                                <div class="list-group-item px-0">
                                    <div class="d-flex justify-content-between align-items-center mb-1">
                                        <h6 class="mb-0">@user.UserName</h6>
                                        <span class="badge bg-primary">@user.TotalClaims</span>
                                    </div>
                                    <div class="d-flex justify-content-between small text-muted">
                                        <span>@user.ApprovedClaims approved</span>
                                        <span>@user.TotalAmount.ToString("C")</span>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-3">
                            <i class="fas fa-users fa-2x text-muted mb-2"></i>
                            <p class="text-muted mb-0">No user data available</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-history me-2 text-primary"></i>Recent Activity
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentClaims.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Claim ID</th>
                                        <th>Lecturer</th>
                                        <th>Contract</th>
                                        <th>Date</th>
                                        <th>Amount</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var claim in Model.RecentClaims.Take(10))
                                    {
                                        <tr>
                                            <td><strong>@claim.ClaimId</strong></td>
                                            <td>@claim.LecturerName</td>
                                            <td>@claim.ContractName</td>
                                            <td>@claim.FormattedDate</td>
                                            <td>@claim.FormattedAmount</td>
                                            <td>
                                                <span class="status-badge status-@claim.Status.ToLower()">
                                                    @claim.Status
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-inbox fa-2x text-muted mb-2"></i>
                            <p class="text-muted">No recent activity</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

    <style>
        .welcome-card {
            background: linear-gradient(135deg, #001a4d 0%, #00308F 100%);
        }

        .stat-card {
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

            .stat-card:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 15px rgba(0,0,0,0.1) !important;
            }

        .status-badge {
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 600;
        }

        .status-pending {
            background-color: #fff3cd;
            color: #856404;
        }

        .status-approved {
            background-color: #d1edff;
            color: #001a4d;
        }

        .status-rejected {
            background-color: #f8d7da;
            color: #721c24;
        }

        .role-badge {
            font-weight: 600;
            font-size: 0.9rem;
        }
    </style>

    <script>
        // Approve claim functionality
        document.querySelectorAll('.approve-claim').forEach(button => {
            button.addEventListener('click', function () {
                const claimId = this.getAttribute('data-claim-id');
                if (confirm(`Approve claim ${claimId}?`)) {
                    fetch(`/Manager/ApproveClaim/${claimId}`, {
                        method: 'POST',
                        headers: {
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                        }
                    }).then(response => {
                        if (response.ok) {
                            location.reload();
                        }
                    });
                }
            });
        });

        // Reject claim functionality
        document.querySelectorAll('.reject-claim').forEach(button => {
            button.addEventListener('click', function () {
                const claimId = this.getAttribute('data-claim-id');
                if (confirm(`Reject claim ${claimId}?`)) {
                    fetch(`/Manager/RejectClaim/${claimId}`, {
                        method: 'POST',
                        headers: {
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                        }
                    }).then(response => {
                        if (response.ok) {
                            location.reload();
                        }
                    });
                }
            });
        });
    </script>
