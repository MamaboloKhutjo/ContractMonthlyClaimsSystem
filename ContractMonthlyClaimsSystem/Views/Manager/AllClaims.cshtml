@model List<Claim>

@{
    ViewData["Title"] = "All Claims";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1>
                    <i class="fas fa-file-invoice me-2"></i>All Claims
                </h1>
                <span class="badge bg-primary fs-6">@Model.Count total</span>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Claim ID</th>
                            <th>Lecturer</th>
                            <th>Contract</th>
                            <th>Submitted</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>Reviewed By</th>
                            <th>Reviewed Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var claim in Model)
                        {
                            <tr>
                                <td><strong>@claim.ClaimId</strong></td>
                                <td>@claim.LecturerName</td>
                                <td>@claim.ContractName</td>
                                <td>@claim.FormattedDate</td>
                                <td class="fw-bold">@claim.FormattedAmount</td>
                                <td>
                                    <span class="badge @claim.StatusBadgeClass">@claim.Status</span>
                                </td>
                                <td>
                                    @if (string.IsNullOrEmpty(claim.ReviewedBy))
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                    else
                                    {
                                        @claim.ReviewedBy
                                    }
                                </td>
                                <td>@claim.FormattedReviewedDate</td>
                                <td>
                                    @if (claim.Status == "Pending")
                                    {
                                        <a href="@Url.Action("ReviewClaim", "Manager", new { id = claim.ClaimId })"
                                           class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-search me-1"></i>Review
                                        </a>
                                    }
                                    else
                                    {
                                        <a href="@Url.Action("ReviewClaim", "Manager", new { id = claim.ClaimId })"
                                           class="btn btn-outline-secondary btn-sm">
                                            <i class="fas fa-eye me-1"></i>View
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>