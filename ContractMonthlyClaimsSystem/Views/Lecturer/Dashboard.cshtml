@model LecturerDashboardViewModel

@{
    ViewData["Title"] = "Lecturer Dashboard";
}

<div class="container-fluid">
    <!-- Welcome Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="welcome-card bg-primary text-white p-4 rounded-3">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <h1 class="h2 mb-2">Welcome back, @Model.CurrentUserName! 👋</h1>
                        <p class="mb-0 opacity-75">Here's your claims overview and quick actions</p>
                    </div>
                    <div class="col-md-4 text-md-end">
                        <div class="role-badge bg-white text-primary px-3 py-2 rounded-pill d-inline-block">
                            <i class="fas fa-user-graduate me-2"></i>@Model.UserRole
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-3"><i class="fas fa-bolt me-2 text-warning"></i>Quick Actions</h5>
                    <div class="d-flex flex-wrap gap-3">
                        <a href="@Url.Action("SubmitClaim", "Lecturer")" class="btn btn-primary btn-lg">
                            <i class="fas fa-plus-circle me-2"></i>Submit New Claim
                        </a>
                        <a href="@Url.Action("MyClaims", "Lecturer")" class="btn btn-outline-primary btn-lg">
                            <i class="fas fa-list me-2"></i>View My Claims
                        </a>
                        <a href="@Url.Action("Profile", "Account")" class="btn btn-outline-secondary btn-lg">
                            <i class="fas fa-user me-2"></i>My Profile
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stat-card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h6 class="card-title text-muted mb-2">Total Claims</h6>
                            <h2 class="text-primary mb-0">@Model.ClaimsSummary.TotalClaims</h2>
                        </div>
                        <div class="icon-circle bg-primary text-white">
                            <i class="fas fa-file-invoice"></i>
                        </div>
                    </div>
                    <p class="text-muted mb-0 small">All time submissions</p>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stat-card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h6 class="card-title text-muted mb-2">Pending</h6>
                            <h2 class="text-warning mb-0">@Model.ClaimsSummary.PendingClaims</h2>
                        </div>
                        <div class="icon-circle bg-warning text-white">
                            <i class="fas fa-clock"></i>
                        </div>
                    </div>
                    <p class="text-muted mb-0 small">Awaiting approval</p>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stat-card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h6 class="card-title text-muted mb-2">Approved</h6>
                            <h2 class="text-success mb-0">@Model.ClaimsSummary.ApprovedClaims</h2>
                        </div>
                        <div class="icon-circle bg-success text-white">
                            <i class="fas fa-check-circle"></i>
                        </div>
                    </div>
                    <p class="text-success mb-0 small">@Model.ClaimsSummary.FormattedApprovedAmount total</p>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stat-card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h6 class="card-title text-muted mb-2">Rejected</h6>
                            <h2 class="text-danger mb-0">@Model.ClaimsSummary.RejectedClaims</h2>
                        </div>
                        <div class="icon-circle bg-danger text-white">
                            <i class="fas fa-times-circle"></i>
                        </div>
                    </div>
                    <p class="text-muted mb-0 small">Requires attention</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Recent Claims -->
        <div class="col-lg-8 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-history me-2 text-primary"></i>Recent Claims
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentClaims.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Claim ID</th>
                                        <th>Contract</th>
                                        <th>Date</th>
                                        <th>Amount</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var claim in Model.RecentClaims)
                                    {
                                        <tr>
                                            <td><strong>@claim.ClaimId</strong></td>
                                            <td>@claim.ContractName</td>
                                            <td>@claim.FormattedDate</td>
                                            <td>@claim.FormattedAmount</td>
                                            <td>
                                                <span class="status-badge status-@claim.Status.ToLower()">
                                                    @claim.Status
                                                </span>
                                            </td>

                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a href="@Url.Action("ClaimDetails", "Lecturer", new { id = claim.ClaimId })"
                                                       class="btn btn-outline-primary">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    @if (claim.Status == "Pending" && string.IsNullOrEmpty(claim.ReviewedBy))
                                                    {
                                                        <button class="btn btn-outline-danger retract-claim"
                                                                data-claim-id="@claim.ClaimId">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="text-center mt-3">
                            <a href="@Url.Action("MyClaims", "Lecturer")" class="btn btn-outline-primary">
                                View All Claims
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-file-invoice fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No claims submitted yet</h5>
                            <p class="text-muted">Get started by submitting your first claim</p>
                            <a href="@Url.Action("SubmitClaim", "Lecturer")" class="btn btn-primary">
                                Submit Your First Claim
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4 mb-4">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-warning text-white py-3">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-clock me-2"></i>Pending Approval
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.MyPendingClaims.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var claim in Model.MyPendingClaims.Take(5))
                            {
                                <div class="list-group-item px-0">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">@claim.ClaimId</h6>
                                            <small class="text-muted">@claim.ContractName</small>
                                        </div>
                                        <span class="badge bg-warning">@claim.FormattedAmount</span>
                                    </div>
                                </div>
                            }
                        </div>
                        @if (Model.MyPendingClaims.Count > 5)
                        {
                            <div class="text-center mt-3">
                                <small class="text-muted">
                                    +@(Model.MyPendingClaims.Count - 5) more pending claims
                                </small>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-3">
                            <i class="fas fa-check-circle fa-2x text-success mb-2"></i>
                            <p class="text-muted mb-0">No pending claims</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Quick Stats -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-chart-bar me-2 text-info"></i>This Month
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6 mb-3">
                            <div class="border-end">
                                <h4 class="text-primary mb-1">@Model.TotalSubmittedClaims</h4>
                                <small class="text-muted">Submitted</small>
                            </div>
                        </div>
                        <div class="col-6 mb-3">
                            <div>
                                <h4 class="text-success mb-1">@Model.ClaimsSummary.FormattedApprovedAmount</h4>
                                <small class="text-muted">Approved</small>
                            </div>
                        </div>
                    </div>
                    <div class="progress mb-2" style="height: 8px;">
                        <div class="progress-bar bg-success" style="width: @(Model.ClaimsSummary.TotalClaims > 0 ? (Model.ClaimsSummary.ApprovedClaims * 100 / Model.ClaimsSummary.TotalClaims) : 0)%"></div>
                        <div class="progress-bar bg-warning" style="width: @(Model.ClaimsSummary.TotalClaims > 0 ? (Model.ClaimsSummary.PendingClaims * 100 / Model.ClaimsSummary.TotalClaims) : 0)%"></div>
                        <div class="progress-bar bg-danger" style="width: @(Model.ClaimsSummary.TotalClaims > 0 ? (Model.ClaimsSummary.RejectedClaims * 100 / Model.ClaimsSummary.TotalClaims) : 0)%"></div>
                    </div>
                    <div class="d-flex justify-content-between small text-muted">
                        <span>@Model.ClaimsSummary.ApprovedClaims Approved</span>
                        <span>@Model.ClaimsSummary.PendingClaims Pending</span>
                        <span>@Model.ClaimsSummary.RejectedClaims Rejected</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


    <style>
        .welcome-card {
            background: linear-gradient(135deg, #001a4d 0%, #00308F 100%);
        }

        .stat-card {
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

            .stat-card:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 15px rgba(0,0,0,0.1) !important;
            }

        .icon-circle {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.2rem;
        }

        .status-badge {
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 600;
        }

        .status-pending {
            background-color: #fff3cd;
            color: #856404;
        }

        .status-approved {
            background-color: #d1edff;
            color: #001a4d;
        }

        .status-rejected {
            background-color: #f8d7da;
            color: #721c24;
        }

        .role-badge {
            font-weight: 600;
            font-size: 0.9rem;
        }

        .table th {
            border-top: none;
            font-weight: 600;
            color: #495057;
            font-size: 0.875rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
    </style>


<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Retract claim functionality
        document.querySelectorAll('.retract-claim').forEach(button => {
            button.addEventListener('click', function () {
                const claimId = this.getAttribute('data-claim-id');
                if (confirm(`Are you sure you want to retract claim ${claimId}? This action cannot be undone.`)) {
                    // AJAX call to retract claim
                    fetch(`/Lecturer/RetractClaim/${claimId}`, {
                        method: 'POST',
                        headers: {
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                        }
                    }).then(response => {
                        if (response.ok) {
                            location.reload();
                        } else {
                            alert('Error retracting claim. Please try again.');
                        }
                    }).catch(error => {
                        alert('Error retracting claim. Please try again.');
                    });
                }
            });
        });
    });
</script>