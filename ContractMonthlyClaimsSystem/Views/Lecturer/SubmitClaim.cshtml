@model SubmitClaimViewModel

@{
    ViewData["Title"] = "Submit New Claim";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="card-title mb-0">
                        <i class="fas fa-file-invoice me-2"></i>Submit New Claim
                    </h2>
                </div>
                <div class="card-body">
                    <form asp-action="SubmitNewClaim" method="post" id="claimForm">
                        @Html.AntiForgeryToken()

                        <!-- Display ALL validation errors -->
                        <div asp-validation-summary="All" class="alert alert-danger d-none" id="validationSummary">
                        </div>

                        <!-- Contract Name -->
                        <div class="mb-3">
                            <label asp-for="ContractName" class="form-label">Contract Name *</label>
                            <select asp-for="ContractName" class="form-select" required id="contractSelect">
                                <option value="">Select a contract...</option>
                                <option value="Software Development 101">Software Development 101</option>
                                <option value="Mathematics 202">Mathematics 202</option>
                                <option value="Physics 301">Physics 301</option>
                                <option value="Engineering 401">Engineering 401</option>
                                <option value="Data Structures 205">Data Structures 205</option>
                                <option value="Algorithms 310">Algorithms 310</option>
                            </select>
                            <span asp-validation-for="ContractName" class="text-danger"></span>
                        </div>

                        <!-- Hours and Rate Inputs -->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="HoursWorked" class="form-label">Hours Worked *</label>
                                    <input asp-for="HoursWorked" type="number" step="0.1" min="0.1" max="744"
                                           class="form-control calculation-input"
                                           placeholder="0.0" required id="hoursInput" value="@Model.HoursWorked">
                                    <span asp-validation-for="HoursWorked" class="text-danger"></span>
                                    <div class="form-text">Enter hours worked (0.1 - 744)</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="HourlyRate" class="form-label">Hourly Rate (R) *</label>
                                    <input asp-for="HourlyRate" type="number" step="0.01" min="50" max="1000"
                                           class="form-control calculation-input"
                                           placeholder="0.00" required id="rateInput" value="@Model.HourlyRate">
                                    <span asp-validation-for="HourlyRate" class="text-danger"></span>
                                    <div class="form-text">R50 - R1000 per hour</div>
                                </div>
                            </div>
                        </div>

                        <!-- Calculated Amount Display -->
                        <div class="mb-3">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <h5 class="card-title text-muted mb-1">Calculated Amount</h5>
                                    <h2 class="text-primary mb-0" id="calculatedAmountDisplay">R 0.00</h2>
                                    <small class="text-muted" id="calculationFormula">0 hours × R0.00/hour</small>
                                    <!-- Removed asp-for so this hidden field has NO name and won't be posted -->
                                    <input type="hidden" id="calculatedAmountInput" value="@Model.CalculatedAmount" />
                                </div>
                            </div>
                        </div>

                        <!-- Validation Messages -->
                        <div class="alert alert-info d-none" id="validationAlert">
                            <i class="fas fa-info-circle me-2"></i>
                            <span id="validationMessage"></span>
                        </div>

                        <!-- Description -->
                        <div class="mb-4">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="4"
                                      placeholder="Describe the work performed (optional)...">@Model.Description</textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                            <div class="form-text">Maximum 500 characters</div>
                        </div>

                        <!-- Auto-generated info -->
                        <div class="alert alert-info">
                            <small>
                                <i class="fas fa-info-circle me-1"></i>
                                <strong>Claim ID:</strong> Will be automatically generated<br>
                                <strong>Submitted by:</strong> @Context.Session.GetString("UserName")<br>
                                <strong>Status:</strong> Will be set to "Pending" for review
                            </small>
                        </div>

                        <!-- Form Actions -->
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary px-4" id="submitButton">
                                <i class="fas fa-paper-plane me-2"></i>Submit Claim
                            </button>
                            <a href="@Url.Action("Dashboard", "Lecturer")" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Document loaded - initializing claim form');

            const hoursInput = document.getElementById('hoursInput');
            const rateInput = document.getElementById('rateInput');
            const amountDisplay = document.getElementById('calculatedAmountDisplay');
            const calculationFormula = document.getElementById('calculationFormula');
            const amountInput = document.getElementById('calculatedAmountInput');
            const validationAlert = document.getElementById('validationAlert');
            const validationMessage = document.getElementById('validationMessage');
            const submitButton = document.getElementById('submitButton');
            const calculationInputs = document.querySelectorAll('.calculation-input');
            const validationSummary = document.getElementById('validationSummary');
            const form = document.getElementById('claimForm');

            // Initialize with any existing values
            const initialHours = parseFloat(hoursInput.value) || 0;
            const initialRate = parseFloat(rateInput.value) || 0;
            if (initialHours > 0 || initialRate > 0) {
                calculateAmount();
            }

            function calculateAmount() {
                const hours = parseFloat(hoursInput.value) || 0;
                const rate = parseFloat(rateInput.value) || 0;
                const amount = hours * rate;

                console.log('Calculating amount:', { hours, rate, amount });

                // Update display
                amountDisplay.textContent = 'R ' + amount.toFixed(2);
                calculationFormula.textContent = `${hours.toFixed(1)} hours × R${rate.toFixed(2)}/hour`;
                // Keep this for client-side usage only; it has no name so it will NOT be posted
                amountInput.value = amount.toFixed(2);

                // Validate amount
                validateAmount(amount, hours, rate);
            }

            function validateAmount(amount, hours, rate) {
                validationAlert.classList.add('d-none');
                validationSummary.classList.add('d-none');

                if (amount === 0) {
                    return;
                }

                if (amount > 50000) {
                    showValidation('Claim amount cannot exceed R50,000. Please split large claims into multiple submissions.', 'warning');
                    disableSubmit();

                } else if (amount < 10) {
                    showValidation('Claim amount must be at least R10.', 'warning');
                    disableSubmit();

                } else if (hours > 160) {
                    showValidation('Note: You have entered more than 160 hours (typical monthly maximum). Please ensure accuracy.', 'info');
                    enableSubmit();

                } else if (rate > 500) {
                    showValidation('Note: Hourly rate is above R500. Please ensure this rate is approved for this contract.', 'info');
                    enableSubmit();

                } else {
                    enableSubmit();
                }
            }

            function showValidation(message, type) {
                validationMessage.textContent = message;
                validationAlert.className = `alert alert-${type === 'warning' ? 'warning' : 'info'}`;
                validationAlert.classList.remove('d-none');
            }

            function disableSubmit() {
                submitButton.disabled = true;
                submitButton.title = 'Please fix validation issues before submitting';
            }

            function enableSubmit() {
                submitButton.disabled = false;
                submitButton.title = '';
            }

            // Event listeners for real-time calculation
            calculationInputs.forEach(input => {
                input.addEventListener('input', calculateAmount);
                input.addEventListener('change', calculateAmount);
            });

            // Format inputs on blur
            hoursInput.addEventListener('blur', function() {
                if (this.value) {
                    this.value = parseFloat(this.value).toFixed(1);
                    calculateAmount();
                }
            });

            rateInput.addEventListener('blur', function() {
                if (this.value) {
                    this.value = parseFloat(this.value).toFixed(2);
                    calculateAmount();
                }
            });

            // Contract-specific rate suggestions
            const contractSelect = document.getElementById('contractSelect');
            const contractRates = {
                'Software Development 101': 450,
                'Mathematics 202': 350,
                'Physics 301': 400,
                'Engineering 401': 420,
                'Data Structures 205': 380,
                'Algorithms 310': 460
            };

            contractSelect.addEventListener('change', function() {
                const selectedContract = this.value;
                if (contractRates[selectedContract]) {
                    // Only suggest if no rate is entered yet
                    if (!rateInput.value || rateInput.value === '0') {
                        rateInput.value = contractRates[selectedContract];
                        calculateAmount();
                    }
                }
            });

            // Form submission handler
            form.addEventListener('submit', function(e) {
                console.log('Form submission attempted');

                const hours = parseFloat(hoursInput.value) || 0;
                const rate = parseFloat(rateInput.value) || 0;
                const amount = hours * rate;
                const contract = contractSelect.value;

                console.log('Submission data:', { hours, rate, amount, contract });

                // Basic validation
                if (!contract) {
                    e.preventDefault();
                    alert('Please select a contract.');
                    contractSelect.focus();
                    return false;
                }

                if (hours < 0.1 || hours > 744) {
                    e.preventDefault();
                    alert('Please enter hours between 0.1 and 744.');
                    hoursInput.focus();
                    return false;
                }

                if (rate < 50 || rate > 1000) {
                    e.preventDefault();
                    alert('Please enter an hourly rate between R50 and R1000.');
                    rateInput.focus();
                    return false;
                }

                if (amount > 50000) {
                    e.preventDefault();
                    alert('Claim amount cannot exceed R50,000. Please split large claims into multiple submissions.');
                    hoursInput.focus();
                    return false;
                }

                if (amount < 10) {
                    e.preventDefault();
                    alert('Claim amount must be at least R10.');
                    hoursInput.focus();
                    return false;
                }

                // Show loading state
                submitButton.disabled = true;
                submitButton.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Submitting...';

                // Allow form to submit normally
                console.log('Form validation passed - allowing submission');
                return true;
            });

            // Check for existing validation errors on page load
            const errorElements = document.querySelectorAll('.text-danger');
            if (errorElements.length > 0) {
                console.log('Validation errors found on page load');
                validationSummary.classList.remove('d-none');
            }
        });
    </script>
}