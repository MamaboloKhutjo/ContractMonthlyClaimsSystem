@model Claim

@{
    ViewData["Title"] = "Claim Details";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="card-title mb-0 h4">
                            <i class="fas fa-file-invoice me-2"></i>Claim @Model.ClaimId
                        </h2>
                        <span class="badge @Model.StatusBadgeClass fs-6 px-3 py-2">@Model.Status</span>
                    </div>
                </div>

                <div class="card-body p-4">
                    <!-- Main Claim Information -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="card h-100 border-0 bg-light">
                                <div class="card-body">
                                    <h5 class="card-title border-bottom pb-2 mb-3 text-dark">
                                        <i class="fas fa-info-circle me-2 text-primary"></i>Claim Information
                                    </h5>
                                    <table class="table table-sm table-borderless">
                                        <tr>
                                            <th class="text-muted" style="width: 140px;">Claim ID:</th>
                                            <td><strong class="text-dark">@Model.ClaimId</strong></td>
                                        </tr>
                                        <tr>
                                            <th class="text-muted">Contract:</th>
                                            <td class="text-dark">@Model.ContractName</td>
                                        </tr>
                                        <tr>
                                            <th class="text-muted">Amount:</th>
                                            <td class="fw-bold text-success fs-5">@Model.FormattedAmount</td>
                                        </tr>
                                        <tr>
                                            <th class="text-muted">Submitted:</th>
                                            <td class="text-dark">@Model.FormattedDate</td>
                                        </tr>
                                        <tr>
                                            <th class="text-muted">Status:</th>
                                            <td>
                                                <span class="badge @Model.StatusBadgeClass fs-7">@Model.Status</span>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card h-100 border-0 bg-light">
                                <div class="card-body">
                                    <h5 class="card-title border-bottom pb-2 mb-3 text-dark">
                                        <i class="fas fa-calculator me-2 text-primary"></i>Calculation Details
                                    </h5>
                                    <table class="table table-sm table-borderless">
                                        <tr>
                                            <th class="text-muted" style="width: 140px;">Hours Worked:</th>
                                            <td class="text-dark">@Model.FormattedHours</td>
                                        </tr>
                                        <tr>
                                            <th class="text-muted">Hourly Rate:</th>
                                            <td class="text-dark">@Model.FormattedHourlyRate</td>
                                        </tr>
                                        <tr>
                                            <th class="text-muted">Total Amount:</th>
                                            <td class="fw-bold text-success fs-5">@Model.FormattedAmount</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Description Section -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="card border-0">
                                <div class="card-body">
                                    <h5 class="card-title border-bottom pb-2 mb-3 text-dark">
                                        <i class="fas fa-align-left me-2 text-primary"></i>Description
                                    </h5>
                                    <div class="p-3 bg-light rounded">
                                        @if (string.IsNullOrEmpty(Model.Description))
                                        {
                                            <span class="text-muted fst-italic">
                                                <i class="fas fa-info-circle me-1"></i>No description provided
                                            </span>
                                        }
                                        else
                                        {
                                            <div class="text-dark">@Model.Description</div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Status-specific Messages -->
                    @if (Model.Status == "Approved")
                    {
                        <div class="alert alert-success d-flex align-items-center">
                            <i class="fas fa-check-circle fa-2x me-3"></i>
                            <div>
                                <h5 class="alert-heading mb-1">Claim Approved!</h5>
                                <p class="mb-0">This claim has been approved and processed successfully.</p>
                                @if (!string.IsNullOrEmpty(Model.ReviewNotes))
                                {
                                    <div class="mt-2 p-2 bg-white rounded">
                                        <strong>Reviewer Notes:</strong> @Model.ReviewNotes
                                    </div>
                                }
                            </div>
                        </div>
                    }
                    else if (Model.Status == "Rejected")
                    {
                        <div class="alert alert-danger d-flex align-items-center">
                            <i class="fas fa-times-circle fa-2x me-3"></i>
                            <div>
                                <h5 class="alert-heading mb-1">Claim Rejected</h5>
                                <p class="mb-0">This claim was not approved.</p>
                                @if (!string.IsNullOrEmpty(Model.ReviewNotes))
                                {
                                    <div class="mt-2 p-2 bg-white rounded">
                                        <strong>Reason:</strong> @Model.ReviewNotes
                                    </div>
                                }
                            </div>
                        </div>
                    }
                    else if (Model.Status == "Pending")
                    {
                        <div class="alert alert-warning d-flex align-items-center">
                            <i class="fas fa-clock fa-2x me-3"></i>
                            <div>
                                <h5 class="alert-heading mb-1">Pending Review</h5>
                                <p class="mb-0">This claim is awaiting approval from management.</p>
                            </div>
                        </div>
                    }

                    <!-- Additional Information (if available) -->
                    @if (!string.IsNullOrEmpty(Model.ReviewedBy) || Model.ReviewedDate.HasValue)
                    {
                        <div class="row">
                            <div class="col-12">
                                <div class="card border-0 bg-light">
                                    <div class="card-body">
                                        <h6 class="card-title text-muted mb-3">
                                            <i class="fas fa-history me-2"></i>Review Information
                                        </h6>
                                        <div class="row">
                                            @if (!string.IsNullOrEmpty(Model.ReviewedBy))
                                            {
                                                <div class="col-md-6">
                                                    <small class="text-muted">Reviewed By:</small>
                                                    <div class="fw-bold">@Model.ReviewedBy</div>
                                                </div>
                                            }
                                            @if (Model.ReviewedDate.HasValue)
                                            {
                                                <div class="col-md-6">
                                                    <small class="text-muted">Reviewed Date:</small>
                                                    <div class="fw-bold">@Model.ReviewedDate.Value.ToString("yyyy-MM-dd HH:mm")</div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Action Buttons -->
                    <div class="d-flex gap-2 justify-content-between mt-4 pt-3 border-top">
                        <div>
                            <a href="@Url.Action("MyClaims", "Lecturer")" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to My Claims
                            </a>
                        </div>

                        <div class="d-flex gap-2">
                            @if (Model.Status == "Pending" && string.IsNullOrEmpty(Model.ReviewedBy))
                            {
                                <form method="post" asp-action="RetractClaim" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="claimId" value="@Model.ClaimId" />
                                    <button type="submit" class="btn btn-danger"
                                            onclick="return confirm('Are you sure you want to retract this claim? This action cannot be undone.')">
                                        <i class="fas fa-trash me-2"></i>Retract Claim
                                    </button>
                                </form>
                            }

                            @if (Model.Status == "Rejected")
                            {
                                <a href="@Url.Action("SubmitClaim", "Lecturer")" class="btn btn-primary">
                                    <i class="fas fa-plus-circle me-2"></i>Submit New Claim
                                </a>
                            }

                            <!-- Print/Download Button -->
                            <button class="btn btn-outline-primary" onclick="window.print()">
                                <i class="fas fa-print me-2"></i>Print
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add some custom CSS for better styling -->
<style>
    .card {
        border-radius: 10px;
    }

    .card-header {
        border-radius: 10px 10px 0 0 !important;
    }

    .table-borderless th {
        font-weight: 500;
    }

    .bg-light {
        background-color: #f8f9fa !important;
    }

    .border-bottom {
        border-color: #dee2e6 !important;
    }

    .alert {
        border-radius: 8px;
        border: none;
    }
</style>