@model List<Claim>

@{
    ViewData["Title"] = "My Claims";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1>My Claims</h1>
                <a href="@Url.Action("SubmitClaim", "Lecturer")" class="btn btn-primary">
                    <i class="fas fa-plus-circle me-2"></i>Submit New Claim
                </a>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Claim ID</th>
                                <th>Contract</th>
                                <th>Submitted Date</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th>Reviewer</th>
                                <th>Review Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@claim.ClaimId</strong>
                                    </td>
                                    <td>@claim.ContractName</td>
                                    <td>@claim.FormattedDate</td>
                                    <td class="fw-bold">@claim.FormattedAmount</td>
                                    <td>
                                        <span class="badge @claim.StatusBadgeClass">@claim.Status</span>
                                    </td>
                                    <td>
                                        @if (string.IsNullOrEmpty(claim.ReviewedBy))
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                        else
                                        {
                                            @claim.ReviewedBy
                                        }
                                    </td>
                                    <td>@claim.FormattedReviewedDate</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <!-- View Details Button - Always available -->
                                            <a href="@Url.Action("ClaimDetails", "Lecturer", new { id = claim.ClaimId })"
                                               class="btn btn-outline-primary">
                                                <i class="fas fa-eye me-1"></i>View
                                            </a>

                                            <!-- Retract Button - Only for pending, unreviewed claims -->
                                            @if (claim.Status == "Pending" && string.IsNullOrEmpty(claim.ReviewedBy))
                                            {
                                                <form method="post" asp-action="RetractClaim" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="claimId" value="@claim.ClaimId" />
                                                    <button type="submit" class="btn btn-outline-danger"
                                                            onclick="return confirm('Are you sure you want to retract claim @claim.ClaimId?')">
                                                        <i class="fas fa-trash me-1"></i>Retract
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Summary Statistics -->
        <div class="row mt-4">
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h4 class="text-primary">@Model.Count</h4>
                        <small class="text-muted">Total Claims</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h4 class="text-warning">@Model.Count(c => c.Status == "Pending")</h4>
                        <small class="text-muted">Pending</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h4 class="text-success">@Model.Count(c => c.Status == "Approved")</h4>
                        <small class="text-muted">Approved</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h4 class="text-danger">@Model.Count(c => c.Status == "Rejected")</h4>
                        <small class="text-muted">Rejected</small>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="fas fa-file-invoice fa-3x text-muted mb-3"></i>
                <h3 class="text-muted">No Claims Found</h3>
                <p class="text-muted">You haven't submitted any claims yet.</p>
                <a href="@Url.Action("SubmitClaim", "Lecturer")" class="btn btn-primary">
                    <i class="fas fa-plus-circle me-2"></i>Submit Your First Claim
                </a>
            </div>
        </div>
    }
</div>