@model LoginViewModel

@{
    ViewData["Title"] = "Login - CMCS";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h2 class="mb-0"><i class="fas fa-sign-in-alt me-2"></i>CMCS Login</h2>
                </div>
                <div class="card-body p-5">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Login" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="Username" class="form-label">Full Name</label>
                            <input asp-for="Username" class="form-control form-control-lg"
                                   placeholder="Enter your first and last name" />
                            <span asp-validation-for="Username" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" type="password" class="form-control form-control-lg"
                                   placeholder="Enter your password" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label">Remember me</label>
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">
                            <i class="fas fa-sign-in-alt me-2"></i>Login
                        </button>

                        <div class="text-center">
                            <span class="text-muted">Don't have an account? </span>
                            <a asp-action="Register" class="text-decoration-none fw-semibold">Sign Up Here</a>
                        </div>

                        <div class="text-center">
                            <span class="text-muted">Sample User Data: </span>
                        </div>

                        <div class="text-center">
                            <span class="text-muted">Lecturer: </span>
                           
                        </<div>
                           <div class="text-center">
                            <span class="text-muted">Name & Surname: John Doe </span>
                            <span class="text-muted">Password: password </span>
                        </div>

                        <div class="text-center">
                            <span class="text-muted">Manager: </span>
                            <span class="text-muted">Name & Surname: Jane Smith </span>
                            <span class="text-muted">Password: password </span>
                        </div>

                        <div class="text-center">
                            <span class="text-muted">Program Coordinator: </span>
                            <span class="text-muted">Name & Surname: Bob Johnson </span>
                            <span class="text-muted">Password: password </span>
                        </div>

                        <div class="text-center">
                            <span class="text-muted">HR: </span>
                            <span class="text-muted">Name & Surname: Khutjo Mamabolo </span>
                            <span class="text-muted">Password: password </span>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


    <partial name="_ValidationScriptsPartial" />
