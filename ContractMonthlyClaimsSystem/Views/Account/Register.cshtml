@model RegisterViewModel

@{
    ViewData["Title"] = "Sign Up - CMCS";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h2 class="mb-0"><i class="fas fa-user-plus me-2"></i>Create Account</h2>
                </div>
                <div class="card-body p-5">
                    <form asp-action="Register" method="post">
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label">First Name</label>
                                    <input asp-for="Name" class="form-control form-control-lg"
                                           placeholder="Enter your first name" />
                                    <span asp-validation-for="Name" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Surname" class="form-label">Last Name</label>
                                    <input asp-for="Surname" class="form-control form-control-lg"
                                           placeholder="Enter your last name" />
                                    <span asp-validation-for="Surname" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Role" class="form-label">Role</label>
                            <select asp-for="Role" class="form-select form-select-lg">
                                <option value="">Select your role</option>
                                <option value="Lecturer">Lecturer</option>
                                <option value="Program Coordinator">Program Coordinator</option>
                                <option value="Manager">Manager</option>
                                <option value="Hr">Hr</option>
                            </select>
                            <span asp-validation-for="Role" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" type="password" class="form-control form-control-lg"
                                   placeholder="Create a password (min. 6 characters)" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                            <div class="form-text">
                                Password must contain at least one uppercase letter, one lowercase letter, and one number.
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg"
                                   placeholder="Confirm your password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">
                            <i class="fas fa-user-plus me-2"></i>Create Account
                        </button>

                        <div class="text-center">
                            <span class="text-muted">Already have an account? </span>
                            <a asp-action="Login" class="text-decoration-none fw-semibold">Login Here</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


    <partial name="_ValidationScriptsPartial" />
