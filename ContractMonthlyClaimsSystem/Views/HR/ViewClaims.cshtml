@model List<Claim>

@{
    ViewData["Title"] = "View Claims";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1>
                    <i class="fas fa-file-invoice me-2"></i>All Claims
                </h1>
                <div class="btn-group">
                    <a href="@Url.Action("ViewClaims", new { status = "all" })"
                       class="btn btn-outline-primary @(ViewBag.CurrentFilter == "all" ? "active" : "")">All</a>
                    <a href="@Url.Action("ViewClaims", new { status = "pending" })"
                       class="btn btn-outline-warning @(ViewBag.CurrentFilter == "pending" ? "active" : "")">Pending</a>
                    <a href="@Url.Action("ViewClaims", new { status = "approved" })"
                       class="btn btn-outline-success @(ViewBag.CurrentFilter == "approved" ? "active" : "")">Approved</a>
                    <a href="@Url.Action("ViewClaims", new { status = "paid" })"
                       class="btn btn-outline-info @(ViewBag.CurrentFilter == "paid" ? "active" : "")">Paid</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bulk Download Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-light">
                <div class="card-body py-3">
                    <div class="row g-2">
                        <div class="col-auto">
                            <strong>Bulk Downloads:</strong>
                        </div>
                        <div class="col-auto">
                            <a href="@Url.Action("DownloadAllApprovedClaims")" class="btn btn-sm btn-outline-success">
                                <i class="fas fa-download me-1"></i>All Approved Claims
                            </a>
                        </div>
                        <div class="col-auto">
                            <a href="@Url.Action("DownloadClaimsByStatus", new { status = "pending" })" class="btn btn-sm btn-outline-warning">
                                <i class="fas fa-download me-1"></i>Pending Claims
                            </a>
                        </div>
                        <div class="col-auto">
                            <a href="@Url.Action("DownloadClaimsByStatus", new { status = "paid" })" class="btn btn-sm btn-outline-info">
                                <i class="fas fa-download me-1"></i>Paid Claims
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Claim ID</th>
                            <th>Lecturer</th>
                            <th>Contract</th>
                            <th>Hours</th>
                            <th>Rate</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>Submitted</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var claim in Model)
                        {
                            <tr>
                                <td><strong>@claim.ClaimId</strong></td>
                                <td>@claim.LecturerName</td>
                                <td>@claim.ContractName</td>
                                <td>@claim.FormattedHours</td>
                                <td>@claim.FormattedHourlyRate</td>
                                <td class="fw-bold text-primary">@claim.FormattedAmount</td>
                                <td>
                                    <span class="badge @claim.StatusBadgeClass">@claim.Status</span>
                                </td>
                                <td>@claim.FormattedDate</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="@Url.Action("ClaimDetails", new { id = claim.ClaimId })"
                                           class="btn btn-outline-primary">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (claim.Status == "Approved")
                                        {
                                            <a href="@Url.Action("GenerateInvoice", new { claimId = claim.ClaimId })"
                                               class="btn btn-outline-success">
                                                <i class="fas fa-file-invoice"></i>
                                            </a>
                                        }
                                        <a href="@Url.Action("DownloadClaimsByStatus", new { status = claim.Status.ToLower() })"
                                           class="btn btn-outline-secondary" title="Download similar claims">
                                            <i class="fas fa-download"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>