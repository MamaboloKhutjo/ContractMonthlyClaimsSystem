@model List<Report>

@{
    ViewData["Title"] = "Generated Reports";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1>
                    <i class="fas fa-chart-bar me-2"></i>Generated Reports
                </h1>
                <div class="btn-group">
                    <a href="@Url.Action("Dashboard")" class="btn btn-outline-primary">
                        <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Download Actions -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-download me-2"></i>Quick Downloads
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <a href="@Url.Action("DownloadAllApprovedClaims")" class="btn btn-outline-success w-100">
                                <i class="fas fa-file-csv me-2"></i>Approved Claims (CSV)
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="@Url.Action("DownloadClaimsByStatus", new { status = "pending" })" class="btn btn-outline-warning w-100">
                                <i class="fas fa-file-csv me-2"></i>Pending Claims (CSV)
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="@Url.Action("DownloadClaimsByStatus", new { status = "paid" })" class="btn btn-outline-info w-100">
                                <i class="fas fa-file-csv me-2"></i>Paid Claims (CSV)
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="@Url.Action("DownloadLecturerData")" class="btn btn-outline-primary w-100">
                                <i class="fas fa-users me-2"></i>All Lecturers (CSV)
                            </a>
                        </div>
                    </div>

                    <!-- Monthly Report Download Form -->
                    <div class="row mt-4">
                        <div class="col-12">
                            <h6>Download Custom Monthly Report</h6>
                            <form method="get" asp-action="DownloadMonthlyReport" class="row g-3">
                                <div class="col-md-4">
                                    <label class="form-label">From Date</label>
                                    <input type="date" name="fromDate" class="form-control"
                                           value="@DateTime.Now.AddDays(-30).ToString("yyyy-MM-dd")" required>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">To Date</label>
                                    <input type="date" name="toDate" class="form-control"
                                           value="@DateTime.Now.ToString("yyyy-MM-dd")" required>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">&nbsp;</label>
                                    <button type="submit" class="btn btn-primary w-100">
                                        <i class="fas fa-download me-2"></i>Download Monthly Report
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Generated Reports List -->
    <div class="card">
        <div class="card-header bg-white">
            <h5 class="card-title mb-0">
                <i class="fas fa-history me-2"></i>Previously Generated Reports
            </h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Report Name</th>
                                <th>Type</th>
                                <th>Generated By</th>
                                <th>Date Generated</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var report in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@report.ReportName</strong>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@report.ReportType</span>
                                    </td>
                                    <td>@report.GeneratedBy</td>
                                    <td>@report.GeneratedDate.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="@Url.Action("DownloadReport", new { reportName = report.ReportName + ".txt" })"
                                               class="btn btn-outline-primary" title="Download Report">
                                                <i class="fas fa-download"></i>
                                            </a>
                                            <a href="@report.FilePath" target="_blank"
                                               class="btn btn-outline-info" title="View Report">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-file-alt fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No Reports Generated Yet</h5>
                    <p class="text-muted">Generate your first report from the HR Dashboard.</p>
                    <a href="@Url.Action("Dashboard")" class="btn btn-primary">
                        <i class="fas fa-tachometer-alt me-2"></i>Go to Dashboard
                    </a>
                </div>
            }
        </div>
    </div>
</div>